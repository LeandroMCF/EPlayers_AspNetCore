@model Equipe
@{
    ViewData["Title"] = "Equipes";
}

<form method="Post" action='@Url.Action("Cadastrar")' enctype="multipart/form-data">
    <label>Id</label>
    <input type="text" name="IdEquipe"/>

    <label>Nome</label>
    <input type="text" name="Nome"/>

    <label>Imagens</label>
    <input type="file" name="Imagem"/>

    <button type="submit">Cadastrar</button>
</form>

<table class="table table-striped table-responsive">
    <thead>
        <th>Id</th>
        <th>Nome</th>
        <th>Imagens</th>
    </thead>
    <tbody>
        @foreach (Equipe equipe  in ViewBag.Equipes)
        {
            <tr>
                <td>@equipe.IdEquipe</td>
                <td>@equipe.Nome</td>
                <td><img src="/img/Equipes/@equipe.Imagem" alt="Imagem da @equipe.Nome" width="40"></td>
                <td><a asp-area="Link para excluir uma equipe" asp-controller="Equipe" asp-action="Excluir" asp-route-id="@equipe.IdEquipe"></a></td>
            </tr>
        }
    </tbody>
</table>